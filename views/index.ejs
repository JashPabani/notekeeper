<%- include('partials/header') %>

<div class="text-center mt-5">
  <h1 class="display-5">Welcome to NoteKeeper</h1>
  <p class="lead">Your simple personal note tracking app.</p>
  <% if (!user) { %>
    <a href="/login" class="btn btn-primary me-2">Login</a>
    <a href="/signup" class="btn btn-outline-light">Sign up</a>
  <% } else { %>
    <p class="mt-3">Hello <%= user.username %>!</p>
    <a href="/dashboard" class="btn btn-success">Go to Dashboard</a>
  <% } %>
</div>

<%- include('partials/footer') %>
